{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/.*",
      "dest": "api/index.py"
    },
    {
      "src": "^/$",
      "dest": "api/index.py"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "$GEMINI_API_KEY",
    "FLASK_ENV": "production"
  }
}